<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="form-heading">Add New Comment To <%= campground.name %></h1>
        <div class="form-container">
            <form method="POST" action="/campgrounds/<%= campground._id %>/comments">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>    
    </div>
</div>

<% include ../partials/footer%>